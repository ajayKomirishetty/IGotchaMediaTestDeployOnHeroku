<h1>Repairs:</h1>
<% if @repairs.any? %>

<table>

 <thead>
    <tr>
      <th>RepairId</th>
      <th>CarId</th>
      <th>RepairDate</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>


  <% for repair in @repairs do %>
  <tr>
    <p>
        <td><%= repair.id %></td>
        <td><%= repair.car_id %></td>
        <td><%= repair.repair_date %></td>
        <td><%= link_to 'Show', repair %></td>
        <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
        <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>

    </p>
    </tr>
  <% end %>
    </tbody>
</table>
  <% else %>
   <p>No Repairs at the moment</p>


  <% end %>