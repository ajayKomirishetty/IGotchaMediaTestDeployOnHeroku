<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Doors</th>
      <th>Owner email</th>
      <th>Number of repairs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= car.doors %></td>
        <td><%= car.owner_email %></td>
         <td><%= car.repairs.count %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add Repair', add_repair_path(car) %></td>
        <td><%= link_to 'Show Repairs', show_repairs_path(car) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path, class: "btn btn-primary" %>
